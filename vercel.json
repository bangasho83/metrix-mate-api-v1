{
  "version": 2,
  "functions": {
    "api/meta-stats.js": {
      "memory": 2048,
      "maxDuration": 60
    },
    "api/calendar-sim.js": {
      "memory": 1024,
      "maxDuration": 300
    },
    "api/image-gen.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/meta-ads",
      "destination": "/api/meta-ads.js"
    },
    {
      "source": "/sales",
      "destination": "/api/sales.js"
    }
  ]
}
